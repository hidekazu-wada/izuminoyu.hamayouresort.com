---
// メインSCSSファイルをインポート
import '../../../../styles/main.scss';

import Wave from '../../../images/top/6-news/wave.svg';
---

<section class="news">
  <nav class="news__filter">
    <ul class="news__filter-list">
      <li class="news__filter-item">
        <a href="#" class="news__filter-link"
          ><span class="news__filter-text">すべて</span></a
        >
      </li>
      <li class="news__filter-item">
        <a href="#" class="news__filter-link"
          ><span class="news__filter-text">お知らせ</span></a
        >
      </li>
      <li class="news__filter-item">
        <a href="#" class="news__filter-link"
          ><span class="news__filter-text">イベント・キャンペーン</span></a
        >
      </li>
      <li class="news__filter-item">
        <a href="#" class="news__filter-link"
          ><span class="news__filter-text">スタッフブログ</span></a
        >
      </li>
    </ul>
  </nav>
  <div class="news__list-wrapper">
    <ul class="news__list">
      <li class="news__item">
        <article class="news__article">
          <a href="#" class="news__item-link">
            <header class="news__item-header">
              <time datetime="2025-01-01" class="news__item-date"
                >2025.01.01</time
              >
              <span class="news__item-category">お知らせ</span>
            </header>
            <h3 class="news__item-title">
              ホームページをリニューアルいたしました。
            </h3>
          </a>
        </article>
      </li>
      <li class="news__item">
        <article class="news__article">
          <a href="#" class="news__item-link">
            <header class="news__item-header">
              <time datetime="2025-01-01" class="news__item-date"
                >2025.01.01</time
              >
              <span class="news__item-category">お知らせ</span>
            </header>
            <h3 class="news__item-title">
              ホームページをリニューアルいたしました。
            </h3>
          </a>
        </article>
      </li>
      <li class="news__item">
        <article class="news__article">
          <a href="#" class="news__item-link">
            <header class="news__item-header">
              <time datetime="2025-01-01" class="news__item-date"
                >2025.01.01</time
              >
              <span class="news__item-category">イベント・キャンペーン</span>
            </header>
            <h3 class="news__item-title">
              ホームページをリニューアルいたしました。
            </h3>
          </a>
        </article>
      </li>
    </ul>
  </div>
  <div class="news__more">
    <a href="" class="news__more-link">
      <span class="news__more-text">もっとみる</span>
      <svg
        class="news__more-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="55"
        height="55"
        viewBox="0 0 55 55"
        fill="none"
        aria-hidden="true"
      >
        <path
          d="M27.46 52.46C41.2671 52.46 52.46 41.2671 52.46 27.46C52.46 13.6528 41.2671 2.45996 27.46 2.45996C13.6528 2.45996 2.45996 13.6528 2.45996 27.46C2.45996 41.2671 13.6528 52.46 27.46 52.46Z"
          stroke="#F1EAE4"
          stroke-width="4.92"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M27.4596 37.46L37.4596 27.46L27.4596 17.46"
          stroke="#F1EAE4"
          stroke-width="4.92"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M17.4595 27.46H37.4595"
          stroke="#F1EAE4"
          stroke-width="4.92"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </a>
  </div>
  <img class="news__wave" src={Wave.src} alt="Wave" />
</section>
<style lang="scss">
  // 必要なmixin/functionをインポート
  @import '../../../../styles/variables';
  @import '../../../../styles/functions';
  @import '../../../../styles/mixins';

  // お知らせセクション
  .news {
    background: rgba(124, 99, 81, 0.7);
    padding-bottom: spx(108);
    position: relative;
    overflow: hidden;
    @include tablet-up {
      padding-bottom: ppx(320 * 1.2);
    }
    @include desktop-up {
      padding-bottom: ppx(320);
    }

    &__filter {
      display: none;
      @include tablet-up {
        display: block;
      }
      @include desktop-up {
      }
    }

    &__filter-list {
      @include tablet-up {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: tpx(20 * 1.2);
      }
      @include desktop-up {
        gap: ppx(20);
      }
    }

    &__filter-item {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__filter-link {
      @include tablet-up {
        display: flex;
        align-items: center;
        justify-content: center;
        width: ppx(400 * 1.2);
        height: ppx(76 * 1.2);
        border-radius: ppx(40 * 1.2);
        background: var(--main_color_3, #f1eae4);
        transition: background 0.3s ease;
      }
      @include desktop-up {
        width: ppx(400);
        height: ppx(76);
        border-radius: ppx(40);
      }
      @include hover {
        &:hover {
          background: var(--main_color_2, #d6b156);
          .news__filter-text {
            color: white;
          }
        }
      }
    }

    &__filter-text {
      @include tablet-up {
        color: var(--main_color_1, #7c6351);
        text-align: center;
        font-size: ppx(30 * 1.2);
        font-style: normal;
        font-weight: 500;
        line-height: 86.667%;
        letter-spacing: ppx(0.9 * 1.2);
        transition: color 0.3s ease;
      }
      @include desktop-up {
        font-size: ppx(30);
        letter-spacing: ppx(0.9);
      }
    }

    &__list-wrapper {
      width: spx(560);
      margin-inline: auto;
      padding-top: spx(105);
      @include tablet-up {
        width: ppx(1800 * 1.2);
        padding-top: ppx(80 * 1.2);
      }
      @include desktop-up {
        width: ppx(1800);
        padding-top: ppx(80);
      }
    }

    &__list {
      display: flex;
      flex-direction: column;
      gap: spx(20);
      @include tablet-up {
        gap: ppx(30 * 1.2);
      }
      @include desktop-up {
        gap: ppx(30);
      }
    }

    &__item {
      display: flex;
      flex-direction: column;
      gap: spx(18);
      @include tablet-up {
        gap: ppx(27 * 1.2);
      }
      @include desktop-up {
        gap: ppx(27);
      }
      &::after {
        content: '';
        display: block;
        width: 100%;
        height: 1px;
        background: var(--main_color_3, #f1eae4);
        @include tablet-up {
        }
        @include desktop-up {
        }
      }
    }

    &__article {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__item-link {
      display: flex;
      flex-direction: column;
      gap: spx(8);
      @include tablet-up {
        flex-direction: row;
        align-items: baseline;
        gap: ppx(29 * 1.2);
      }
      @include desktop-up {
        gap: ppx(29);
      }
      @include hover {
        &:hover {
          .news__item-category {
            background: var(--main_color_1, #7c6351);
            color: white;
          }
        }
      }
    }

    &__item-header {
      display: flex;
      align-items: center;
      gap: spx(15);
      @include tablet-up {
        gap: ppx(29 * 1.2);
      }
      @include desktop-up {
        gap: ppx(29);
      }
    }

    &__item-date {
      color: var(--main_color_3, #f1eae4);
      font-family: 'Zen Maru Gothic';
      font-size: spx(30);
      font-style: normal;
      font-weight: 500;
      line-height: 160%;
      @include tablet-up {
        font-size: ppx(32 * 1.2);
        line-height: 180%;
        letter-spacing: ppx(1.6 * 1.2);
      }
      @include desktop-up {
        font-size: ppx(32);
        letter-spacing: ppx(1.6);
      }
    }

    &__item-category {
      color: var(--main_color_1, #7c6351);
      text-align: center;
      font-family: 'Zen Maru Gothic';
      font-size: spx(26);
      font-style: normal;
      font-weight: 500;
      line-height: spx(51);
      border-radius: spx(30px);
      background: var(--main_color_3, #f1eae4);
      display: block;
      width: 46vw;
      height: spx(51);
      letter-spacing: normal;
      transition:
        background 0.3s ease,
        color 0.3s ease;
      @include tablet-up {
        font-size: ppx(23 * 1.2);
        line-height: ppx(60 * 1.2);
        letter-spacing: ppx(0.69 * 1.2);
        width: ppx(300 * 1.2);
        height: ppx(60 * 1.2);
      }
      @include desktop-up {
        font-size: ppx(23);
        letter-spacing: ppx(0.69);
        line-height: ppx(60);
        width: ppx(300);
        height: ppx(60);
      }
    }

    &__item-title {
      color: var(--main_color_3, #f1eae4);
      font-family: 'Zen Maru Gothic';
      font-size: spx(29);
      font-style: normal;
      font-weight: 500;
      line-height: 160%;
      letter-spacing: normal;
      @include tablet-up {
        font-size: ppx(32 * 1.2);
        line-height: 130%;
        letter-spacing: ppx(1.6 * 1.2);
        width: ppx(1237 * 1.2);
      }
      @include desktop-up {
        font-size: ppx(32);
        letter-spacing: ppx(1.6);
        width: ppx(1237);
      }
    }

    &__more {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__more-link {
      display: flex;
      align-items: center;
      gap: spx(15);
      margin-top: spx(28);
      width: max-content;
      margin-inline: auto;
      @include tablet-up {
        gap: ppx(17 * 1.2);
        margin-left: auto;
        margin-right: 8vw;
        margin-top: ppx(50 * 1.2);
      }
      @include desktop-up {
        gap: ppx(17);
        margin-right: ppx(380);
        margin-top: ppx(50);
      }
      @include hover {
        &:hover {
          .news__more-text {
            color: var(--main_color_1, #7c6351);
          }
          .news__more-icon {
            path {
              stroke: var(--main_color_2, #7c6351);
            }
          }
        }
      }
    }

    &__more-text {
      color: var(--main_color_3, #f1eae4);
      font-family: 'Zen Maru Gothic';
      font-size: spx(28);
      font-style: normal;
      font-weight: 500;
      line-height: 130%;
      letter-spacing: spx(1.4);
      transition: color 0.3s ease;
      @include tablet-up {
        font-size: ppx(32 * 1.2);
        letter-spacing: ppx(1.6 * 1.2);
      }
      @include desktop-up {
        font-size: ppx(32);
        letter-spacing: ppx(1.6);
      }
    }

    &__more-icon {
      display: block;
      width: spx(40);
      height: auto;
      @include tablet-up {
        width: ppx(50 * 1.2);
      }
      @include desktop-up {
        width: ppx(50);
      }
      path {
        transition: stroke 0.3s ease;
      }
    }
    &__wave {
      position: absolute;
      bottom: -1px;
      left: 0;
      width: 100%;
      height: auto;
      display: block;
    }
  }
</style>
